<h1>Your Projects</h1>

<table class="table">
  <tbody>
    <%= sync partial: 'project_list_row', collection: Project.by_user(current_user) %>
    <%= sync_new partial: 'project_list_row', resource: Project.new, scope: Project.by_user(current_user) %>
  </tbody>
</table>

<%= link_to 'New Project', new_project_path %>

<hr />

<h1>Your Todos</h1>

<table class="table" data-name="todos-list">
  <colgroup>
    <col class="fill"/>
    <col/>
  </colgroup>
  <tbody>
    <%= sync partial: 'todo_list_row', collection: current_user.todos %>
    <%= sync_new partial: 'todo_list_row', resource: Todo.new, scope: current_user %>
  </tbody>
</table>

